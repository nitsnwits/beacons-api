#%RAML 0.8
title: Salesman
version: v1
baseUri: http://localhost:3000/salesman/{version}

documentation: 
  - title: Salesman Backend API's
    content: | 
      Salesman - Powering the In-Store Shopping Experience Prototype
  
schemas:
  - BadRequest: |
      {
        "status": "error",
        "errorCode": 400,
        "errorMessage": "Bad Request"
      }
  - NotFound: |
      {
        "status": "error",
        "errorCode": 404,
        "errorMessage": "Not Found"
      }
  - Unauthorized: |
      {
        "status": "error",
        "errorCode": 401,
        "errorMessage": "Unauthorized"
      }
  - InternalServerError: |
      {
        "status": "error",
        "errorCode": 500,
        "errorMessage": "Internal Server Error"
      }
  - ServiceUnavailable: |
      {
        "status": "error",
        "errorCode": 503,
        "errorMessage": "Service Unavailable"
      }

/auth:
  post:
    description: Login to salesman and retrieve access tokens
    body:
      application/json:
        example: |
          {
            'email': 'Test.User@test.com',
            'passsword': 'TestPassword123'
          }
    responses:
      200:
        body:
          application/json:
            example: |
              {
                'accessToken': '8ad5e23c-828f-40f5-8a60-7fdc36e02607',
                'tokenType': 'Bearer',
                'tokenExpiry': 3600,
                'userId': '22f3bc90-7cf8-11e4-b4a9-0800200c9a66'
              }
      400:
        body:
          application/json:
            schema: BadRequest
      401:
        body:
          application/json:
            schema: Unauthorized
      404:
        body:
          application/json:
            schema: NotFound
      500:
        body:
          application/json:
            schema: InternalServerError
      503:
        body:
          application/json:
            schema: ServiceUnavailable      

